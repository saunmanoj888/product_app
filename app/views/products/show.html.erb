<div class="container">
  <h2 class="h2 mt-5 text-dark text-center text-monospace"><%= @product.name %></h2>
  <div class="row justify-content-center">
    <div class="col-12 mt-4 mb-3">
      <div class="card">
        <h5 class="card-header bg-warning text-white text-monospace text-center">Details</h5>
        <div class="card-body text-monospace">
          <p><span class="font-weight-bold">Model: </span><%= @product.model %></p>
          <p><span class="font-weight-bold">Brand: </span><%= @product.brand %></p>
          <p><span class="font-weight-bold">Released Date: </span><%= @product.released_date %></p>
          <p><span class="font-weight-bold">RAM: </span><%= @product.ram %></p>
          <p><span class="font-weight-bold">External Storage: </span><%= @product.external_storage %></p>
          <hr>
          <p class="text-muted text-center">Created <%= time_ago_in_words @product.created_at %> ago</p>
        </div>
        <div class="text-center h4">
          <%= link_to 'Home', root_path %>
        </div>
      </div>
    </div>
  </div>
</div>