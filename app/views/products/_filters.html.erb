<h4 class="h2 mt-4 font-weight-normal text-center">Filters</h1>
<%= search_form_for @search, url: search_products_path, method: :post do |f| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">Search by</h5>
      <p class="card-text">
        <%= f.text_field :name_cont, placeholder: 'Enter a product name' %>
      </p>
      <p class="card-text">
        <%= f.text_field :model_cont, placeholder: 'Enter a product model' %>
      </p>
      <p class="card-text">
        <%= f.text_field :brand_cont, placeholder: 'Enter a product brand' %>
      </p>
    </div>
  </div>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">RAM</h5>
      <p class="card-text">
        <%= check_box_tag('q[ram_lteq]', 10) %>
        10 GB and Under
      </p>
      <p class="card-text">
        <%= check_box_tag('q[ram_lteq]', 20) %>
        20 GB and Under
      </p>
      <p class="card-text">
        <%= check_box_tag('q[ram_lteq]', 32) %>
        32 GB and Under
      </p>
    </div>
  </div>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">External Storage</h5>
      <p class="card-text">
        <%= check_box_tag('q[external_storage_lteq]', 32) %>
        32 GB and Under
      </p>
      <p class="card-text">
        <%= check_box_tag('q[external_storage_lteq]', 64) %>
        64 GB and Under
      </p>
      <p class="card-text">
        <%= check_box_tag('q[external_storage_lteq]', 128) %>
        128 GB and Under
      </p>
    </div>
  </div>
  <div class="mt-3">
    <%= f.submit "Filter", class: "btn btn-warning" %>
  </div>
<% end %>